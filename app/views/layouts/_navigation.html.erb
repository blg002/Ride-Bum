<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
    	<ul class="nav">
    	  <li class="<%= 'active' if current_page?(root_path) %>">
    	    <%= link_to "Ride-Bum",  root_path %>
    	  </li>
    	  <li class="divider-vertical"></li>
    	  <% if signed_in? %>
          <li><%= link_to "Logout",  destroy_user_session_path, method: :delete %></li>
        <% else -%>
          <% if !current_page?(new_user_registration_path) %>
            <li><%= link_to "Sign up", new_user_registration_path, {class: "button sign_up"} %></li>
          <% end -%>
    	  <% end -%>
    	</ul>
    	
    	<% if not signed_in? %>
    	  <% if !current_page?(new_user_session_path) %>
    	    <div class="signin_form">
    	      <%= form_for("user", url: user_session_path, html: { class: "form-inline"}) do |f| %>
      	      <%= f.text_field :login %>
      	      <%= f.password_field :password %>
      	      <%= f.submit "Log in", id: "submit_button", :class => 'btn' %>
    	      <% end -%>
    	    </div>
    	  <% end -%>
      <% end -%>
    </div>
  </div>
</div>
