<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Destination:</b>
  <%= @event.destination %>
</p>

<p>
  <b>Arrival time:</b>
  <%= @event.arrival_time %>
</p>

<% if can? :update, @event %>
  <%= link_to "Enter Guests", new_event_invitation_path(@event.id) %> |
  <%= link_to 'Send email to all invitees', send_emails_event_invitations_path(@event.id) %><br />
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'All events', events_path %>
<% end %>
